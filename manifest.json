{
  "manifest_version": 3,
  "name": "Hannaford Coupons Auto-Clipper",
  "version": "1.0",
  "description": "Automatically scroll and clip all available coupons on Hannaford.com with one click",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.hannaford.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.hannaford.com/*"
      ],
      "js": [
        "src/content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.jpg",
      "48": "icon.jpg",
      "128": "icon.jpg"
    }
  },
  "icons": {
    "16": "icon.jpg",
    "48": "icon.jpg",
    "128": "icon.jpg"
  }
}
